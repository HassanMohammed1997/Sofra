<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_4"
    app:cardBackgroundColor="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cart_item_list_iv_display_image"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_100"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_8"
            android:layout_marginBottom="@dimen/dimen_8"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/cart_item_list_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_8"
            android:layout_toEndOf="@id/cart_item_list_iv_display_image"
            android:text="Compaters sunt messors de azureus bursa."
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/cart_item_list_btn_counter"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_item_list_tv_name"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_8"
            android:layout_toEndOf="@id/cart_item_list_iv_display_image"
            android:background="@color/colorGreen" />

        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_item_list_tv_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_8"
            android:gravity="center"
            android:text="@string/price_text"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dimen_8"
            android:id="@+id/cart_item_list_tv_price"
            android:layout_marginEnd="@dimen/dimen_8"
            android:gravity="center"
            android:text="@string/price_50_text" />

        <TextView
            android:id="@+id/cart_item_list_tv_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_item_list_iv_display_image"
            android:alpha="0.5"
            android:background="@color/colorGray"
            android:padding="4dp"
            android:text="@string/total_price"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />


    </RelativeLayout>


</android.support.v7.widget.CardView>