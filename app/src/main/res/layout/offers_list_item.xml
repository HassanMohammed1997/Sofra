<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_8"
    app:cardBackgroundColor="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8">

        <ImageView
            android:id="@+id/offers_list_item_iv_foodPhoto"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_100"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/offers_list_item_tv_foodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_8"
            android:layout_toEndOf="@id/offers_list_item_iv_foodPhoto"
            android:text="@string/dummy_text"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/offers_list_item_tv_restaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offers_list_item_tv_foodName"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_8"
            android:layout_toEndOf="@id/offers_list_item_iv_foodPhoto"
            android:text="@string/dummy_text" />

        <TextView
            android:id="@+id/offers_list_item_tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offers_list_item_tv_restaurantName"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_8"
            android:layout_toEndOf="@id/offers_list_item_iv_foodPhoto"
            android:text="@string/dummy_text" />

        <TextView
            android:id="@+id/offers_list_item_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offers_list_item_tv_duration"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginEnd="@dimen/dimen_8"
            android:layout_toEndOf="@id/offers_list_item_iv_foodPhoto"
            android:text="@string/dummy_text" />

    </RelativeLayout>


</android.support.v7.widget.CardView>