<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".ui.fragment.userCycle.SplashFragment">

    <ImageView
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_200"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_50"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:gravity="center"
        android:text="@string/app_slogan"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_16" />

    <Button
        android:id="@+id/order_food_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_32"
        android:elevation="@dimen/standard_elev"
        android:layout_marginEnd="@dimen/dimen_16"
        android:background="@drawable/custom_shape_yellow"
        android:text="@string/button_food_order" />

    <Button
        android:id="@+id/buy_food_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_16"
        android:background="@drawable/custom_shape_yellow"
        android:text="@string/button_food_buying" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/twitter_image"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginEnd="@dimen/dimen_8" />


        <ImageView
            android:id="@+id/instagram_image"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_50"
        android:gravity="center"
        android:text="@string/reserved_text"
        android:textColor="@color/colorWhite" />


</LinearLayout>